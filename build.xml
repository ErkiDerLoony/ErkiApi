<project name="ErkiAPI" default="jar">

  <property name="version" value="0.0.1" />

  <property name="bin.dir" value="bin" />
  <property name="src.dir" value="src" />

  <property name="jar.file" value="${ant.project.name}-${version}.jar" />
  <property name="tar.file" value="${ant.project.name}-${version}.tar.bz2" />

  <path id="classpath">
    <fileset dir="lib">
      <include name="*.jar" />
    </fileset>
  </path>

  <target name="all" depends="clean, make, jar, tar" />

  <target name="tar" depends="jar">
    <delete file="${tar.file}" />
    <tar destfile="${tar.file}" compression="bzip2">
      <tarfileset prefix="${ant.project.name}-${version}" dir="."
                  excludes="**/.git **/.git/**" />
    </tar>
  </target>

  <target name="jar" depends="make">
    <jar destfile="${jar.file}" basedir="${bin.dir}" />
  </target>

  <target name="make">
    <mkdir dir="${bin.dir}" />
    <javac destdir="${bin.dir}" srcdir="${src.dir}" debug="on"
           debuglevel="lines,vars,source" classpathref="classpath" />
  </target>

  <target name="clean">
    <delete dir="${bin.dir}" />
    <delete file="${jar.file}" />
    <delete file="${tar.file}" />
  </target>

</project>
